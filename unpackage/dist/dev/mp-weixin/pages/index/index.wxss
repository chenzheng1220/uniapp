.index {
  box-sizing: border-box;
  width: 100%;
  padding: 0 24rpx;
  overflow: hidden;
  background-color: #ebedf0;
}
.index .item {
  box-sizing: border-box;
  width: 100%;
  margin: 24rpx auto;
  display: flex;
  background-color: #ffffff;
  padding: 24rpx;
}
.index .item .imageBox {
  width: 120rpx;
  height: 120rpx;
}
.index .item .imageBox .articleCover {
  display: block;
  width: 100%;
  height: 100%;
}
.index .item .text {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 0 0 24rpx;
  overflow: hidden;
  justify-content: space-around;
}
.index .item .text .title {
  font-size: 28rpx;
  font-weight: bold;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.index .item .text .introduction {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  line-height: 1.6em;
  text-align: justify;
  color: #000000;
}
.index .item .text .releaseTime {
  font-size: 24rpx;
  color: #909399;
  text-align: right;
}